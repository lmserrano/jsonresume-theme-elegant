unless _.isEmpty(resume.basics.summary)
  .detail#about
    .icon
      i.fs-lg.icon-board
      span.mobile-title About
    .info
      h4.title.text-uppercase About

      .card.card-nested
        .content.mop-wrapper(itemprop="description")!= resume.basics.summary

        unless _.isEmpty(resume.basics.tags)
          .space-top.labels
            each tag in resume.basics.tags
              span.label.label-role= tag