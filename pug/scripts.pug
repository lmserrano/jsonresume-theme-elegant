script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js")

script.
  $(function () {
    var toggleFloatingMenu = function() {
      $( '.js-floating-nav' ).toggleClass( 'is-visible' );
      $( '.js-floating-nav-trigger' ).toggleClass( 'is-open' );
    };

    $( ".background-card" ).css( "min-height", window.screen.availHeight + "px" );
    $( "[data-toggle=tooltip]" ).tooltip();
    $( '.js-floating-nav-trigger' ).on( 'click', function(e) {
      e.preventDefault();
      toggleFloatingMenu();
    });
    $( '.js-floating-nav a' ).on( 'click', toggleFloatingMenu );

    $( ".floating-nav" ).css( "max-height", (window.innerHeight - 40) + "px" );
    $(".floating-nav").css("overflow", "hidden");
    $(".floating-nav").css("overflow-y", "scroll");


    $("#remaining-profiles").on('show.bs.collapse', function() {
      $( '.js-profiles-collapse > i' )
        .removeClass( 'icon-chevron-down' )
        .addClass( 'icon-chevron-up' );
    });

    $("#remaining-profiles").on('hidden.bs.collapse', function() {
      $( '.js-profiles-collapse > i' )
        .removeClass( 'icon-chevron-up' )
        .addClass( 'icon-chevron-down' );
    });

    $("#other-skills").on('show.bs.collapse', function () {
        $('.js-other-skills-collapse > i')
            .removeClass('icon-chevron-down')
            .addClass('icon-chevron-up');
    });

    $("#other-skills").on('hidden.bs.collapse', function () {
        $('.js-other-skills-collapse > i')
            .removeClass('icon-chevron-up')
            .addClass('icon-chevron-down');
    });

    $("#projects").on('show.bs.collapse', function () {
      $('.js-projects-collapse > i')
        .removeClass('icon-chevron-down')
        .addClass('icon-chevron-up');
      });

    $("#projects").on('hidden.bs.collapse', function () {
      $('.js-projects-collapse > i')
        .removeClass('icon-chevron-up')
        .addClass('icon-chevron-down');
      });
  });

